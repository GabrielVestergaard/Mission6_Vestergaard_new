@model List<Movie>

<table class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Copied To Plex</td>
            <td>Notes</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Category?.CategoryName</td>
                    <td>@m.Title</td>
                    <td>@m.Year</td>
                    <td>@m.Director</td>
                    <td>@m.Rating</td>
                    <td>@m.Edited</td>
                    <td>@m.LentTo</td>
                    <td>@m.CopiedToPlex</td>
                    <td>@m.Notes</td>
                    
                    <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@m.MovieId">Edit</a></td>
                    <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@m.MovieId">Delete</a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11">No movies in the collection yet. <a href="/Home/Form">Add a movie</a>.</td>
            </tr>
        }
    </tbody>
</table>
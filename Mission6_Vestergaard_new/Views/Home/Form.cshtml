@{
    Layout = "_Layout";
}

@model Movie

<h1>Add New Movie</h1>

<form method="post">
    
    <input type="hidden" asp-for="MovieId" />
    
    <!-- Validation summary -->
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <!-- Category -->
    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId" required>
        <option value="">Select Category</option>
        @foreach (var c in ViewBag.Categories as IEnumerable<Category>)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>
    <br/>

    <!-- Title -->
    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required/>
    <span asp-validation-for="Title" class="text-danger"></span>
    <br/>

    <!-- Year -->
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" required/>
    <span asp-validation-for="Year" class="text-danger"></span>
    <br/>

    <!-- Director -->
    <label asp-for="Director">Director:</label>
    <input asp-for="Director" required/>
    <br/>

    <!-- Rating (Dropdown) -->
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" required>
        <option value="">Select Rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br/>

    <!-- Edited (True/False) -->
    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited" required>
        <option value="">Select Option</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <span asp-validation-for="Edited" class="text-danger"></span>
    <br/>

    <!-- Lent To (Optional) -->
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo"/>
    <br/>

    <!-- Copied To Plex (True/False) -->
    <label asp-for="CopiedToPlex">Copied To Plex:</label>
    <select asp-for="CopiedToPlex" required>
        <option value="">Select Option</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    <br/>

    <!-- Notes (Optional, max 25 characters) -->
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25"/>
    <br/>

    <button type="submit">Add Movie</button>
</form>

